@model CustomersProductsWebApp.Models.AddCustomerViewModel;
@{
}
<h1>Add Customers:</h1>

<form method="post" action="Add" id="customerform">
    <div class="mb-3">
        <label for="exampleInputName" class="form-label">Full Name(alphabets only)</label>
        <input type="text" class="form-control" id="InputName" asp-for="Name" >
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail" class="form-label">Email</label>
        <input type="text" class="form-control" id="InputEmail" asp-for="Email" >
    </div>
    <div class="mb-3">
        <label for="exampleInputAddress" class="form-label">Address</label>
        <input type="text" class="form-control" id="InputAddress" asp-for="Address" >
    </div>
    <div class="mb-3">
        <label for="exampleInputPayment" class="form-label">Payment method</label>
        <input type="text" class="form-control" id="InputPayment" asp-for="PaymentType">
    </div>
    <div class="mb-3">
        <label for="exampleInputPhonenumber" class="form-label">Phone number</label>
        <input type="number" class="form-control" id="InputPhonenumber" asp-for="PhoneNumber">
    </div>
    <div class="mb-3">
        <label for="exampleInputPID" class="form-label">Product ID</label>
        <input type="number" class="form-control" id="InputPID" aria-describedby="pidHelp" asp-for="PID">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>